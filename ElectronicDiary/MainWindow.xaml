<Window x:Class="ElectronicDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicDiary"
        mc:Ignorable="d"
        Title="электронный дневник" Height="450" Width="800">
    <Grid>
        <TextBlock Width="120" Height="30">имя пользователя</TextBlock>
        <TextBox Width="300" Height="30" Margin="180, 30, 0, 0"
                 x:Name="user"></TextBox>
        <TextBlock Width="120" Height="30" Margin="0, 120, 0, 0">пароль</TextBlock>
        <TextBox Width="300" Height="30" Margin="180, 150, 0, 0"
                 x:Name="parole"></TextBox>
        <Button Width="120" Height="30" Margin="0, 210, 0, 0"
                Click="Button_Click">войти</Button>
    </Grid>
</Window>