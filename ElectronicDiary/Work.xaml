<Window x:Class="ElectronicDiary.Work"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicDiary"
        mc:Ignorable="d"
        Title="Work" Height="450" Width="800">
    <Grid>
        <TextBlock Height="30" Margin="0, -390, 0, 0" x:Name="workName"></TextBlock>
        <TextBox Height="300" Margin="0, 30, 0, 0" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" x:Name="workCont"></TextBox>
        <Button Width="300" Height="30" Margin="0, 360, 0, 0"
                Click="Button_Click">отправить задание</Button>
    </Grid>
</Window>